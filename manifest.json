{
    "name": "Simple Toggle Sites",
    "version": "1.0.0",
    "description": "A very basic extension to quickly block or unblock a list of websites.",
    "permissions": [
        "storage", 
        "webRequest", 
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "16": "dist/images/icon-16x16.png",
        "48": "dist/images/icon-48x48.png",
        "128": "dist/images/icon-128x128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "dist/images/icon-16x16-off.png"
    },
    "manifest_version": 2
}